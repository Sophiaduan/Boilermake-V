<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.duan35.whats_there.Add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/title_message"
        android:textColor="#f10b0b"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textAppearance="?android:textAppearanceLarge"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox1"
        android:layout_marginTop="60dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox2"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_marginTop="60dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox3"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_marginTop="60dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox4"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_marginTop="60dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox5"
        android:onClick="selectItem"
        android:layout_below="@+id/checkBox4"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox6"
        android:layout_marginLeft="220dp"
        android:onClick="selectItem"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_alignBottom="@+id/checkBox1"
         />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox7"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_marginLeft="220dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox8"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_marginLeft="220dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox9"
        android:layout_alignTop="@+id/checkBox4"
        android:layout_marginLeft="220dp"
        android:onClick="selectItem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox"
        android:id="@+id/checkBox10"
        android:layout_alignTop="@+id/checkBox5"
        android:layout_marginLeft="220dp"
        android:onClick="selectItem" />

    <Button
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:id="@+id/done"
    android:text="@string/done"
    android:layout_alignTop="@+id/checkBox5"
    android:layout_marginTop="60dp"
    android:onClick="finalSelection"
    android:layout_centerHorizontal="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/final_result"
        android:text = "Hello"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_alignTop="@+id/done"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Quantity"
        android:id="@+id/quantity"
        android:layout_alignTop="@+id/checkBox5"
        android:layout_marginTop="60dp"/>


</RelativeLayout>

