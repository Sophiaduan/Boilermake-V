<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.purdue.duan35.whatsthere.MainActivity">

    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <translate
        android:fromXDelta = "-100%p"
        android:toXDelta = "0"
        android:duration="@android:integer/config_longAnimTime"
        />

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView"
        style="@style/AppTheme"
        android:background="@android:drawable/alert_light_frame"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:id="@+id/textView"
        android:textColor="#0f0e0e"
        android:textColorHighlight="#121010"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Grocery List"
        android:id="@+id/button3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#0bf617"
        android:contextClickable="true"
        android:clickable="true"
        android:enabled="true"
        android:width="@dimen/abc_search_view_text_min_width"
        android:textStyle="bold"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:layout_alignBottom="@+id/surfaceView"
        android:layout_centerHorizontal="true"
        android:onClick="list"
        android:layout_marginBottom="165dp" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:text="Remove"
    android:id="@+id/button2"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="#f7e80d"
    android:contextClickable="true"
    android:clickable="true"
    android:enabled="true"
    android:width="@dimen/abc_search_view_text_min_width"
    android:textStyle="bold"
    android:textSize="@dimen/abc_select_dialog_padding_start_material"
    android:layout_alignBottom="@+id/surfaceView"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="270dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Add"
        android:id="@+id/button1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#e45512"
        android:contextClickable="true"
        android:clickable="true"
        android:enabled="true"
        android:width="@dimen/abc_search_view_text_min_width"
        android:textStyle="bold"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:layout_alignBottom="@+id/surfaceView"
        android:layout_centerHorizontal="true"
        android:onClick="add"
        android:layout_marginBottom="370dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Recipe"
        android:id="@+id/button4"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#19fbec"
        android:contextClickable="true"
        android:clickable="true"
        android:enabled="true"
        android:width="@dimen/abc_search_view_text_min_width"
        android:textStyle="bold"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:layout_alignBottom="@+id/surfaceView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
